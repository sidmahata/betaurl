<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <title>{% block title %}Welcome!{% endblock %}</title>

        {#<link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet' type='text/css'>#}
        {#<link href='https://fonts.googleapis.com/css?family=Roboto+Slab' rel='stylesheet' type='text/css'>#}
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/3.3.6/sandstone/bootstrap.min.css">

        {% block stylesheets %}{% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>

        {#base navbar#}
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ url('homepage') }}">Brand</a>
                </div>

                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                            <li><a href="{{ url('fos_user_profile_show') }}">Dashboard</a></li>
                        {% endif %}

                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a href="{{ url('fos_user_profile_show') }}" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-user fa-lg"></i>
                                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                    {{ app.user.username }}
                                    {% else %}
                                    User
                                {% endif %}
                                <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                    <li><a href="{{ url('fos_user_profile_show') }}">Profile</a></li>
                                    <li><a href="{{ url('fos_user_change_password') }}">Change Password</a></li>
                                    <li class="divider"></li>
                                    <li><a href="{{ url('fos_user_security_logout') }}">Logout</a></li>
                                {% else %}
                                    <li><a href="{{ url('fos_user_registration_register') }}">Register</a></li>
                                    <li><a href="{{ url('fos_user_security_login') }}">Login</a></li>
                                {% endif %}
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        {#/base navbar#}

        {#left sidebar#}
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xs-4 col-sm-3 col-md-3 col-lg-2">
                        <div class="row">
                            <div class="list-group">
                                <a href="#" class="list-group-item">
                                    <span class="lead"><i class="fa fa-user"></i> {{ app.user.username }}</span>
                                    <br>
                                    <small>Last login: {{ app.user.lastLogin|date('Y-m-d H:i:s') }}</small>
                                </a>
                                <a href="#" class="list-group-item">Dapibus ac facilisis in
                                </a>
                                <a href="#" class="list-group-item">Morbi leo risus
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-8 col-sm-9 col-md-9 col-lg-10">
                        <div class="panel panel-primary">
                            <div class="panel-heading">
                                <h3 class="panel-title">Panel primary</h3>
                            </div>
                            <div class="panel-body">
        {% else %}
            <div class="container">
        {% endif %}

        {% block body %}{% endblock %}

        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                </div>
                            </div>

                        </div>
                </div>
            </div>
        {% else %}
            </div>
        {% endif %}
        {#/left sidebar#}

        <!-- Latest compiled and minified JavaScript -->
        <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>

        {% block javascripts %}{% endblock %}

    </body>
</html>
